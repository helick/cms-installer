{
    "name": "helick/cms-installer",
    "type": "composer-plugin",
    "description": "A custom Composer plugin for installing the Helick CMS",
    "keywords": [
        "helick",
        "cms"
    ],
    "license": "MIT",
    "support": {
        "issues": "https://github.com/helick/cms-installer/issues",
        "source": "https://github.com/helick/cms-installer"
    },
    "authors": [
        {
            "name": "Evgenii Nasyrov",
            "email": "evgenii@helick.io"
        }
    ],
    "require": {
        "php": ">=7.1",
        "composer-plugin-api": "^1.1",
        "roots/soil": "^3.8"
    },
    "require-dev": {
        "composer/composer": "^1.8",
        "squizlabs/php_codesniffer": "^3.4"
    },
    "autoload": {
        "psr-4": {
            "Helick\\Composer\\": "src/"
        }
    },
    "extra": {
        "class": "Helick\\Composer\\Plugin"
    },
    "scripts": {
        "lint": [
            "phpcs -p --standard=psr2 src"
        ]
    },
    "config": {
        "sort-packages": true
    }
}
